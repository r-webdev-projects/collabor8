{
  "name":"joinforces",
  "description":"Less than 10 million people use Joinforc.es to test ideas, form teams, and contribute to less than 2,000 projects.",
  "scripts": {
    "postdeploy": "bundle exec rake db:reset db:migrate"
  },
  "env":{
    "LANG":{
      "required":true
    },
    "RACK_ENV":{
      "required":true
    },
    "RAILS_ENV":{
      "required":true
    },
    "RAILS_SERVE_STATIC_FILES":{
      "required":true
    },
    "SECRET_KEY_BASE":{
      "required":true
    },
    "JF_RUBY_VERSION": {
      "description": "The default version of ruby to run",
      "value": "2.2.1"
    }
  },
  "addons":[
    "mailtrap",
    "heroku-postgresql",
    "papertrail",
    "postmark"
  ]
}
