<% content_for :head do %>
  <%= javascript_include_tag 'components/auth' %>
<% end %>


<h2>Welcome back</h2>
<h3>We've missed you</h3>

<%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.text_field :login, placeholder: 'Username', class: 'valid'%>
    <%= f.label :login, 'Username' %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %>
    <%= f.label :password do %>
      Password
      <% if @minimum_password_length %>
        <em>&nbsp;(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    <% end %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
