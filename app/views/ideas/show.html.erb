<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @idea.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @idea.description %>
</p>

<h2>Comments</h2>
<%= render @idea.comments %>

<% if user_signed_in? %>
	<h2>Add a comment:</h2>
	<%= render 'comments/form' %>
<% end %>

<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
